local Players = game:GetService("Players")
local RbxAnalyticsService = game:GetService("RbxAnalyticsService")

local BlacklistedHWIDs = {
    "BAE1A8FB-6F7D-430A-BEB8-501B3DFD7D62",
    "1837E531-57DB-4C21-9841-812DEB0BDFB3",
    "91A51117-1F34-4E0C-92C2-2AC2593781FA",
}

local BlacklistedUsernames = {}

local function Check()
    local Local = Players.LocalPlayer
    if not Local then return end

    local HWID = RbxAnalyticsService:GetClientId()
    local Username = Local.Name

    local isBlacklisted = false

    for _, hwid in ipairs(BlacklistedHWIDs) do
        if HWID == hwid then
            isBlacklisted = true
            break
        end
    end

    for _, name in ipairs(BlacklistedUsernames) do
        if Username == name then
            isBlacklisted = true
            break
        end
    end

    if isBlacklisted then
        Local:Kick("You have been blacklisted by SentinelGuard.")
    end
end

while true do
    task.wait(3)
    Check()
end

